---
import Section from "./Section.astro";
---

<section
  class="landing-section bg-black h-screen w-screen overflow-hidden relative"
  data-header-color="white"
>
  <div class="z-30 relative">
    <div class="relative p-4">
      <div
        class="lg:grid lg:grid-flow-row-dense lg:grid-cols-2 lg:gap-12 lg:items-center"
      >
        <div class="lg:mb-96 mt-20 lg:col-start-2 md:pl-20 relative">

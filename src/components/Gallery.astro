---
import { type Pictures, type Picture } from "../types/image";
const data = await fetch("https://picsum.photos/v2/list");

const photos = (await data.json()) as Picture[];
console.log(photos);
---

<section
  class="landing-section bg-black h-screen w-screen overflow-hidden relative"
  data-header-color="white"
>
  <div class="z-30 relative text-center">
    <h2 class="text-white pt-20 ml-8 text-[40px] font-medium">Galeria</h2>
    <p class="text-white text-lg ml-8 mt-4">
      Conocenos por nuestros resultados.
    </p>
  </div>
  <div class="z-30 relative text-center">
    <div class="bg-transparent">
      <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
        <div class=" grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
          {
            photos.map((photo) => (
              <div class="group relative">
                <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
                  <img src={photo?.download_url} alt="Front of men&#039;s Basic Tee in black." class="h-full w-full object-cover object-center lg:h-full lg:w-full">
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
    
  </div>
  <div class="absolute top-0 bottom-0 h-full w-full z-10">
    <img class="object-center object-cover w-full" src="./black_wall.jpg" />
  </div>
</section>
